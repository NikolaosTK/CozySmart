@model CozySmart.ViewModels.AvailabilityFormViewModel
@{
    ViewBag.Title = "AvailabilityForm";
}

@Html.Partial("NavbarHostRole")

<h2>Add the occupation period you want</h2>

@using (Html.BeginForm("Add", "Availability", FormMethod.Post, new { @class = "multi-data/form-control" }))
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.OccupationStart, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.EditorFor(m => m.OccupationStart, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.OccupationStart)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.OccupationEnd, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.OccupationEnd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.OccupationEnd)
            </div>
        </div>


        @Html.HiddenFor(m => m.AccommodationId)

        <div class="form-group">
            <div class="col-md-offset-3 col-md-7">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </div>

    </div>
}