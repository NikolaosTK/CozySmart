@model CozySmart.ViewModels.DetailsViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Accommodation</h4>
    <hr />

    <div id="accommodationCarousel" class="carousel" data-ride="carousel">
        <!--Indicators-->
        <ol class="carousel-indicators">
            <li data-target="#accommodationCarousel" data-slide-to="0" class="active"></li>

            @for (int i = 1; i < Model.Images.Count(); i++)
            {
                <li data-target="#accommodationCarousel" data-slide-to="@i"></li>
            }
        </ol>

        <div class="carousel-inner">
            @foreach (var image in Model.Images)
            {
                if (image.Title == "Thumbnail")
                {
                    <div class="item active">
                        <img src="@image.ImageUrl" alt="@image.Title" style="width: 100%" />
                    </div>
                }
                else
                {
                    <div class="item">
                        <img src="@image.ImageUrl" alt="@image.Title" style="width: 100%" />
                    </div>
                }
            }
        </div>

        <a class="left carousel-control" href="#accommodationCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#accommodationCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Accommodation.Category.Description)
        </dt>

