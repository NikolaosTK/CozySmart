@model CozySmart.ViewModels.DetailsViewModel

<div id="accommodationCarousel" class="carousel" data-ride="carousel">
    <!--Indicators-->
    <ol class="carousel-indicators">
        <li data-target="#accommodationCarousel" data-slide-to="0" class="active"></li>

        @for (int i = 1; i < Model.Images.Count() + 1; i++)
        {
            <li data-target="#accommodationCarousel" data-slide-to="@i"></li>
        }
    </ol>

    <div class="carousel-inner">
        <div class="item active">
            <img src="@Model.Thumbnail" alt="Thumbnail" style="width: 100%" />
        </div>

        @foreach (var image in Model.Images)
        {
            <div class="item">
                <img src="@image.ImageUrl" alt="@image.Title" style="width: 100%" />
            </div>

        }
    </div>

    <a class="left carousel-control" href="#accommodationCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#accommodationCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>