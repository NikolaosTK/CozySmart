@model IEnumerable<CozySmart.Models.Accommodation>

@{
    ViewBag.Title = "Accommodations";
}

<h2>Accommodations</h2>
<p>
    @Html.ActionLink("Add a new Accommodation", "New", "Accommodations")
</p>

@if (!Model.Any())
{
    <p>There are not any accommodation yet.</p>
}
else
{
    <div class="row">
        @foreach (var accommodation in Model)
        {
            <div class="col-md-3">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <img src="@accommodation.Thumbnail" class="img-thumbnail" alt="Thumbnail">
                        <h2 class="panel-title text-center">@accommodation.Title</h2>
                    </div>
                    <div class="panel-body text-center">
                        Location: @accommodation.Location <br/>
                        Price: @accommodation.Price
                    </div>
                    <div class="panel-footer text-center">
                        <a href="~/Accommodations/Details/@accommodation.Id" class=" = btn btn-success" role="button">Learn more</a>                        
                    </div>
                </div>
            </div>
        }
    </div>
}
